{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "checkJs": true,        // type-check JS (use // @ts-check per-file if you prefer)
    "strict": true,         // tighten later
    "noImplicitAny": true  // tighten later
  },
  "include": ["src", "tests", "types.d.ts"]
}
